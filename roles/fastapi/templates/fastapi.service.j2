[Unit]
Description=FastAPI Application
After=network.target

[Service]
User={{ fastapi_user }}
Group={{ fastapi_user }}
WorkingDirectory={{ fastapi_app_dir }}
ExecStart=/home/ubuntu/fastapi-app/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000

Restart=always

[Install]
WantedBy=multi-user.target
